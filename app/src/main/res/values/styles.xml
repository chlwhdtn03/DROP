<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="android:windowLightStatusBar">false</item>-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:ambientShadowAlpha">0.05</item>
        <item name="android:spotShadowAlpha">0.05</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--        <item name="android:windowLightStatusBar">false</item>-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:ambientShadowAlpha">0.05</item>
        <item name="android:spotShadowAlpha">0.05</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_h</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_h</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_h</item>
        <item name="android:textColor">@color/materialGray7</item>
    </style>

</resources>
